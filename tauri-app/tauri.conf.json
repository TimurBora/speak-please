{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "speak-please",
  "version": "0.1.0",
  "identifier": "com.speakplease.app",
  "build": {
    "beforeDevCommand": "pnpm dev --host",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "speak-please",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; audio-src 'self' asset: https://asset.localhost; connect-src 'self' asset: https://asset.localhost;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
